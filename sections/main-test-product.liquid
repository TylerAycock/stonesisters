<div class="product container">
  <h2>{{ product.title }}</h2>
  <img src="{{ product.featured_image | image_url: width: 300, height: 500 }}" width=300 height=500/> 
  {% if section.settings.show_reviews %}
  <h4>⭐️⭐️⭐️⭐️</h4>
  {% endif %}
  <h4>{{ section.settings.tax_notice }}</h4>
</div>

{% schema %}
  {
    "name": "main test product",
    "settings": [
      {
        "id": "tax_notice",
        "type": "text",
        "label": "Tax Notice"
      },
       {
        "id": "show_reviews",
        "type": "checkbox",
        "label": "Show Reviews?"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .product_container{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
{% endstylesheet %}

