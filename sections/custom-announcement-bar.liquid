{% if template.name == 'index' or section.settings['show-on-homepage'] == false %}
  <div class="custom__bar">
    <a href="{{ section.settings.link }}">
      <p class="custom__bar__msg">{{ section.settings['announcement-bar-text'] }}</p>
    </a>
  </div>
{% endif %}

{% style %}
  .custom__bar{
    text-align: {{section.settings.text_alignment}};
    padding: {{section.settings.height__padding}}px 0;
    background-color: {{section.settings.background-color}};

  }

  .custom__bar a{
      text-decoraction: none;
  }

  .custom__bar__msg{
    font-size: {{section.settings.font-size}}px;
    color: {{section.settings.font-color}};
    text-transform: {{section.settings.text_transform}}
  }
{% endstyle %}

{% schema %}
{
  "name": "Custom Announcement Bar",
  "max_blocks": 4,
  "blocks": [
    {
  "type": "Announcement",
  "name": "Announcement",
  "settings":
  [
  {
    "type": "checkbox",
    "id": "show-on-homepage",
    "label": "Only Show on HomePage",
    "default": false
  },
  {
      "type": "text",
      "id": "announcement-bar-text",
      "default": "This is a default announcement",
      "label": "Annoucement Text"
    },
    {
      "type": "range",
      "id": "font-size",
      "default": 14,
      "label": "Font Size",
      "min": 12,
      "max": 26,
      "step": 1,
      "unit": "px"

    },
    {
      "type": "range",
      "id": "height__padding",
      "default": 14,
      "label": "Top and Bottom Padding",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background Color",
      "default": "#fff"
    },
       {
      "type": "color",
      "id": "font-color",
      "label": "Font Color",
      "default": "#eee"
    },
    {
      "type": "url",
      "id": "link",
      "label":"Link"
    },
    {
  "type": "select",
  "id": "text_alignment",
  "label": "Text Align",
  "options": [
    {
      "value": "start",
      "label": "Start"
    },
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "end",
      "label": "End"
    }
  ],
  "default": "start"
},
      {
  "type": "select",
  "id": "text_transform",
  "label": "Text Transform",
  "options": [
    {
      "value": "lowercase",
      "label": "Lowercase"
    },
    {
      "value": "none",
      "label": "None"
    },
    {
      "value": "uppercase",
      "label": "Uppercase"
    }
  ],
  "default": "none"
}
  ]
    }
  ]
}
{% endschema %}

