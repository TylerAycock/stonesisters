<div class="custom__bar">
  <a href="{{ section.settings.link }}">
    <p class="custom__bar__msg">{{ section.settings['announcement-bar-text'] }}</p>
  </a>
</div>

{% style %}
  .custom__bar{
    text-align: {{section.settings.vertical_alignment}};
    padding: {{section.settings.height__padding}}px 0;
    background-color: {{section.settings.background-color}};

  }

  .custom__bar a{
      text-decoraction: none;
  }

  .custom__bar__msg{
    font-size: {{section.settings.font-size}}px;
    color: {{section.settings.font-color}}
  }
{% endstyle %}

{% schema %}
{
  "name": "Custom Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement-bar-text",
      "default": "This is a default announcement",
      "label": "Annoucement Text"
    },
    {
      "type": "range",
      "id": "font-size",
      "default": 14,
      "label": "Font Size",
      "min": 12,
      "max": 26,
      "step": 1,
      "unit": "px"

    },
    {
      "type": "range",
      "id": "height__padding",
      "default": 14,
      "label": "Top and Bottom Padding",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background Color",
      "default": "#fff"
    },
       {
      "type": "color",
      "id": "font-color",
      "label": "Font Color",
      "default": "#eee"
    },
    {
      "type": "url",
      "id": "link",
      "label":"Link"
    },
    {
  "type": "select",
  "id": "vertical_alignment",
  "label": "Vertical alignment",
  "options": [
    {
      "value": "top",
      "label": "Top"
    },
    {
      "value": "middle",
      "label": "Middle"
    },
    {
      "value": "bottom",
      "label": "Bottom"
    }
  ],
  "default": "middle"
}
  ]
}
{% endschema %}

