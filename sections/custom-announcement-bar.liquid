<div class="custom__bar">
  <a href="https://google.com">
    <p>{{ section.settings['announcement-bar-text'] }}</p>
  </a>
</div>

{% style %}
  .custom__bar a p{
    text-align: center;
    font-size: {{section.settings.font-size}};
  }
  .custom__bar a p{
    text-decoraction: none;
    color: red;
  }
{% endstyle %}

{% schema %}
{
  "name": "Custom Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement-bar-text",
      "default": "This is a default announcement",
      "label": "Annoucement Text"
    },
    {
      "type": "range",
      "id": "font-size",
      "default": 14,
      "label": "Font Size",
      "min": 12,
      "max": 26,
      "step": 1,
      "unit": "px"

    }
  ]
}
{% endschema %}

